/* pages/comment/comment.wxss */

.container-layout{
  width: 100%;
  height: 100vh;
}

.cancel-publish-layout {
  width: 100%;
  height: 80rpx;
  position: relative;
  display: flex;
}

.flex-center {
  display: flex;
  justify-content: center;
  align-items: center;
}

.cancel-btn {
  width: 128rpx;
  height: 100%;
  color: #666;
  font-size: 30rpx;
  font-weight: bold;
}

.confirm-btn {
  width: 128rpx;
  height: 100%;
  color: #32c7a6;
  font-size: 30rpx;
  position: absolute;
  right: 0;
  background-color: #fff;
  font-weight: bold;
}

.info-text {
  width: 90%;
  height: 500rpx;
  font-size: 28rpx;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
  padding-left: 5%;
  padding-right: 5%;
  color: #333;
}

button::after {
  border: none;
  outline: none;
}

.line {
  width: 100%;
  height: 1rpx;
  background-color: #e5e5e5;
}
